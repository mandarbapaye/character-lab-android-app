<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llStrongStrengthFrag"
    android:background="@drawable/strength_details_card_bg"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llTipsCard"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTipsCardLabel"
            android:text="Improve Social Intelligence"
            android:textSize="15sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTipsCardPageCount"
            android:text="2/5"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llTipsCard"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/need_help_label"
            android:textSize="12sp"
            android:id="@+id/tvImprovementTips1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/need_help_label"
            android:textSize="12sp"
            android:id="@+id/tvImprovementTips2"
            android:layout_below="@+id/tvImprovementTips1"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/need_help_label"
            android:textSize="12sp"
            android:id="@+id/tvImprovementTips3"
            android:layout_below="@+id/tvImprovementTips2"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            />

    </RelativeLayout>

</RelativeLayout>
