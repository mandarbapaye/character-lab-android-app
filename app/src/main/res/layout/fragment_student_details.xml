    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strong_trait_label"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:id="@+id/ivStDetailsStrong"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/strong_trait_label"
                android:textSize="12sp"
                android:id="@+id/tvStDetailsStrong"
                android:gravity="center"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/need_help_label"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:id="@+id/ivStDetailsWeak"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/need_help_label"
                android:textSize="12sp"
                android:gravity="center"
                android:id="@+id/tvStDetailsWeak"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/improvement_label"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:id="@+id/ivStDetailsImproved"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/improvement_label"
                android:textSize="12sp"
                android:gravity="center"
                android:id="@+id/tvStDetailsImproved"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/details_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:id="@+id/tvStudentDetailDetails"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.characterlab.android.views.BarGraph
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bgStudentDetail"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>
