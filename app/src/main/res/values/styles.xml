<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DarkActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="StudentListDividedListStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/student_list_background_color</item>
        <item name="android:divider">@drawable/student_list_divide</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MeasurementRecordListDividedListStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/bg_grey</item>
    </style>

</resources>
