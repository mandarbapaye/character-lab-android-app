<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/character_card_selected_color" />
            <stroke
                android:width="1dp"
                android:color="@color/character_lab_dark_green_color" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/character_card_color" />
            <stroke
                android:width="1dp"
                android:color="@color/character_lab_dark_green_color" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>
</selector>