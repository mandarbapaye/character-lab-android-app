<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/character_card_color" />
            <stroke
                android:width="1dp"
                android:color="#eee" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/character_card_color"
                android:endColor="@color/character_card_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/character_lab_dark_green_color" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>
</selector>