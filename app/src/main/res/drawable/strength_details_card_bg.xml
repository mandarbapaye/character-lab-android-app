<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f8f8f8" />
            <stroke
                android:width="1dp"
                android:color="@color/shadow_beige" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/shadow_beige" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>
</selector>